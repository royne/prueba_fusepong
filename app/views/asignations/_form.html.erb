<div id="asignation-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @asignation, remote: true do |f| %>
        <div class="modal-body text_modal">
          <div class="form-group">
            <%= f.hidden_field(:service_id, :value => @service) %>
          </div>
          <div class="form-group">
            <%= f.collection_select :user_id, User.with_role(:message), :id, :name %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit title, class: "btn btn-dark btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
