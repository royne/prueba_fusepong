<div class="container margin">
  <div class="row justify-content-center">
    <div class="col-sm-4 card">
      <div class="margin-devise">
        <h2>Registro</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
          </div>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"Nombre" %>
          </div>

          <div class="form-group">
            <%= f.text_field :document, autofocus: true, class:"form-control", placeholder:"Documento" %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> Caracteres minimo)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"ContraseÃ±a" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder:"Confirma ContraseÃ±a" %>
          </div>

          <div class="form-group">
            <%= f.submit "Registrarce", class:"btn btn-dark btn-block" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
