<div id="message-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for(@message, url: messages_path, remote: true) do |f| %>
        <div class="modal-body text_modal">
          <div class="form-group">
            <%= f.text_field :name, class: "form-control", placeholder: "Nombre" %>
          </div>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
          </div>
          <div class="form-group">
            <%= f.text_field :document, class: "form-control", placeholder: "Documento" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"ContraseÃ±a (es la misma cedula)" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit title_btn, class: "btn btn-dark btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
