<div id="service-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title"><%= title %></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <%= form_for @service, remote: true do |f| %>
        <div class="modal-body text_modal">
          <div class="form-group">
            <%= f.text_field :origin, class: "form-control", placeholder: "Origen" %>
          </div>
          <div class="form-group">
            <%= f.text_field :destination, class: "form-control", placeholder: "Destino" %>
          </div>
          <div class="form-group">
            <%= f.label "Fecha", class:"col-sm-5 col-form-label text-secondary" %>
            <%= f.date_select :date, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label "Hora", class:"col-sm-5 col-form-label text-secondary" %>
            <%= f.time_select :time, class: "form-control" %>
          </div>
        </div>

        <div class="modal-footer">
          <%= f.submit 'Solicitar Servicio', class: "btn btn-dark btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
