<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          <strong>Servicio No. <%= @service.id %></strong>
        </div>
        <div class="card-body">
          <p><b>Cilente:</b> <%= @service.user.name %></p>
          <p><b>Origen: </b> <%= @service.origin %></p>
          <p><b>Destino:</b> <%= @service.destination %></p>
          <p><b>Fecha:</b> <%= l(@service.date, format:"%d %b %y") %></p>
          <p><b>Hora:</b> <%= l(@service.time, format: "%I:%M %p") %></p>
          <%= link_to "Asignar Mensajero", new_asignation_path(service: params[:id]), remote: true, class:"btn btn-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>
